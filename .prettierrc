{
    "trailingComma": "none",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "jsxBracketSameLine": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 60,
    "endOfLine": "lf",
    "overrides": [
        {
            "files": [
                "*.scss",
                "*.css",
                "*.html"
            ],
            "options": {
                "tabWidth": 2,
                "printWidth": 90
            }
        }
    ]
}
